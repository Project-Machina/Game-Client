<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.web.WebView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            AnchorPane.topAnchor="0.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.bottomAnchor="0.0"
            xmlns:fx="http://javafx.com/fxml">

    <HBox styleClass="address-bar"
          spacing="15.0"
          alignment="CENTER"
          prefHeight="40.0"
          AnchorPane.topAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="200.0">
        <Label text="Domain" labelFor="$addressField"/>
        <TextField fx:id="addressField" promptText="Enter Address"/>
        <Button text="Connect"/>
    </HBox>

    <TreeView prefWidth="200.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.topAnchor="0.0"
              fx:id="bookmarks"/>

    <AnchorPane fx:id="npcContainer" AnchorPane.topAnchor="40.0" AnchorPane.rightAnchor="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">

    </AnchorPane>

    <stylesheets>
        <URL value="@internet.css"/>
    </stylesheets>

</AnchorPane>
