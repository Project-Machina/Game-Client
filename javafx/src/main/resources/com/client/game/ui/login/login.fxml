<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import java.net.URL?>
<AnchorPane layoutX="500.0" layoutY="200.0" styleClass="login-root" prefHeight="200.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" layoutY="258.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" maxHeight="142.0" maxWidth="272.0" spacing="10.0" styleClass="login-box">
                    <children>
                        <Label text="Login to Project Zero"/>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="Email"/>
                                <TextField fx:id="email" promptText="Enter email"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="10.0" layoutY="36.0" spacing="10.0">
                            <children>
                                <Label text="Password"/>
                                <PasswordField fx:id="password" promptText="Enter password"/>
                            </children>
                        </HBox>
                        <HBox spacing="15.0" alignment="CENTER">
                            <Button fx:id="loginBtn" mnemonicParsing="false" text="Login"/>
                            <CheckBox fx:id="rememberMe" text="Remember Me"/>
                        </HBox>
                        <Label style="-fx-text-fill: red;" fx:id="infoLabel"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <effect>
                        <InnerShadow height="83.02" radius="29.2125" width="35.83">
                            <color>
                                <Color red="0.8100000023841858" green="0.13770000636577606" blue="0.13770000636577606"
                                       opacity="0.462184876203537"/>
                            </color>
                        </InnerShadow>
                    </effect>
                </VBox>
            </children>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@../../../application/dark-theme.css"/>
        <URL value="@login.css"/>
    </stylesheets>
</AnchorPane>
