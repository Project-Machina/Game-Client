<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import tornadofx.Form?>
<?import javafx.scene.layout.HBox?>
<?import tornadofx.Fieldset?>
<?import tornadofx.Field?>
<?import javafx.scene.control.ChoiceBox?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<AnchorPane styleClass="install-software-root-container" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <VBox
            styleClass="install-software-container"
            AnchorPane.topAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0">
        <Label styleClass="install-software-header" fx:id="headerLabel"/>
        <Form spacing="10.0">
            <Fieldset fx:id="installFieldset" text="Encrypt Process">
                <Field text="REM Software">
                    <ChoiceBox fx:id="remSoftwares">
                        <String fx:value="SuperEE.rem : 45.6"/>
                        <String fx:value="SuperEEE.rem : 54.8"/>
                    </ChoiceBox>
                </Field>
            </Fieldset>
        </Form>
        <HBox spacing="15.0">
            <Button fx:id="installBtn" text="Install"/>
            <Button fx:id="cancelBtn" text="Cancel"/>
        </HBox>
    </VBox>

    <stylesheets>
        <URL value="@../../../../application/dark-theme.css"/>
        <URL value="@install-software.css"/>
    </stylesheets>

</AnchorPane>
