<?xml version="1.0" encoding="UTF-8"?>

<?import com.client.game.model.software.coloring.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">


    <fx:define>

        <SoftwareColorSizeRangeList fx:id="colorRange">
            <SoftwareSizeColorModel minValue="0" maxValue="10000" color="90EE90FF"/>
            <SoftwareSizeColorModel minValue="10001" maxValue="100000" color="FFA500FF"/>
            <SoftwareSizeColorModel minValue="100001" maxValue="200000" color="fd6363"/>
            <SoftwareSizeColorModel minValue="200001" maxValue="4147000000" color="FF0000FF"/>
        </SoftwareColorSizeRangeList>

    </fx:define>
    <HBox
            AnchorPane.leftAnchor="0.0"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.topAnchor="0.0"
            AnchorPane.rightAnchor="0.0">
        <Label fx:id="sizeLabel" text="1 MB"/>
    </HBox>

</AnchorPane>